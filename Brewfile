# Update Homebrew to HEAD
update

# Upgrade any existing formulae
upgrade

# Install Fish
install fish

# Install OpenSSL, use with cURL
install openssl
link openssl --force
install curl
install curl-ca-bundle

# Version control
install git
install tig

# Use the latest version of Vim
install vim

# Install useful libraries
install libyaml
install readline

# Install useful binaries
install boot2docker
install docker
install pianobar
install postgresql
install redis
install ruby-install
install the_silver_searcher
install wget

# Remove outdated versions of installed packages
cleanup
