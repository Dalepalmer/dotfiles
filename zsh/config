# setenv() { export $1=$2 }

setopt PROMPT_SUBST
export PROMPT='%m:%3~$(git_info_for_prompt)%# '
export RPROMPT=""

export LSCOLORS="Exfxcxdxbxegedabagacad"

export PATH=/usr/local/bin:/user/local/mysql/bin:$PATH
export MANPATH=/usr/local/man:$MANPATH
export CODEPATH=~/Documents/Code
export GEMPATH=`gem env gemdir`

export EDITOR="mvim -f"
export VISUAL=$EDITOR

fpath=(~/.zsh/functions $fpath)
autoload -U ~/.zsh/functions/*(:t)

HISTFILE=~/.zsh_history
HISTSIZE=1000
SAVEHIST=1000

# setopt HIST_VERIFY
setopt EXTENDED_HISTORY
setopt APPEND_HISTORY
setopt INC_APPEND_HISTORY SHARE_HISTORY
setopt HIST_IGNORE_ALL_DUPS
setopt HIST_REDUCE_BLANKS

setopt AUTO_CD
setopt COMPLETE_IN_WORD
setopt LOCAL_OPTIONS
# setopt LOCAL_TRAPS
setopt MULTIOS
setopt NO_BG_NICE
setopt NO_LIST_BEEP
setopt RM_STAR_WAIT

unsetopt NO_HUP

# These, for some reason, are unset by defining "mvim" as the $VISUAL editor.
bindkey '^A' beginning-of-line
bindkey '^E' end-of-line

bindkey '^[[5D' backward-word
bindkey '^[[5C' forward-word
