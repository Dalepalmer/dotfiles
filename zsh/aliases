# * Grep shortcut
alias -g "?"="| grep --color --extended-regexp"

# * Open domains with the browser
for domain (com net org edu) alias -s $domain="open"

# * Open logs with tail
alias -s log="tail -200f"

# * Show all with which
alias which="builtin which -a"

# * less.vim
alias vess="/usr/share/vim/vim72/macros/less.sh"

# dietrb
alias irb='[[ -x `which dietrb` ]] && [[ `ruby -v` =~ 1.9 ]] && dietrb || irb'
